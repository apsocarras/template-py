{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Attach: debugpy 5678",
            "type": "debugpy",
            "request": "attach",
            "connect": { "host": "127.0.0.1", "port": 5678 }

        // Couple with the following code block for debugging at arbitrary points
        // within .py files: 
            // debugpy.listen(5678)
            // print("Waiting for debugger attachâ€¦")
            // debugpy.wait_for_client()
            // debugpy.breakpoint()
        },
        {
        "name": "Python: run current file",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}",
        "envFile": "${workspaceFolder}/.env",
        "justMyCode": true
        },
        {
        "name": "Python: Functions Framework",
        "type": "debugpy",
        "request": "launch",
        "module": "functions_framework",
        "args": [
            "--target=run",
            "--port=8080",
            "--debug"
        ],
        "envFile":  "${workspaceFolder}/_local/.env",
            "cwd": "${workspaceFolder}",
        "justMyCode": false,
        },
        {
        "name": "Pytest: SRC debug current file",
        "type": "debugpy",
        "request": "launch",
        "module": "pytest",
        "args": ["-k", "${fileBasenameNoExtension}", "-q", "-s", "tests/"],
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}",
        "envFile": "${workspaceFolder}/.env",
        "justMyCode": true, 
           "env": {
            "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
    ]
}